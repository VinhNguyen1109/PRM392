<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginBottom="12dp" android:elevation="4dp"
    android:padding="12dp" android:foreground="?attr/selectableItemBackground"
    android:layout_marginHorizontal="8dp"
    android:radius="16dp"
    >

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal" android:gravity="center_vertical"
        android:baselineAligned="false">

        <!-- Avatar -->
        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="60dp" android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_background"
            android:padding="4dp"
            android:src="@drawable/ic_user_placeholder" />

        <!-- Thông tin -->
        <LinearLayout
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1" android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Tên người thân"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtRelation"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Mối quan hệ"
                android:textSize="14sp"
                android:textColor="#666666" />
        </LinearLayout>

        <!-- Nút sửa / xoá -->
        <LinearLayout
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end|center_vertical"
            android:layout_marginStart="8dp">

            <ImageView
                android:id="@+id/btnEdit"
                android:layout_width="28dp" android:layout_height="28dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="Sửa"
                android:src="@drawable/ic_edit" />

            <ImageView
                android:id="@+id/btnDelete"
                android:layout_width="28dp" android:layout_height="28dp"
                android:contentDescription="Xoá"
                android:src="@drawable/ic_delete" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
